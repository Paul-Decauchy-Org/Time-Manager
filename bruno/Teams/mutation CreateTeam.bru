  name: mutation CreateTeam
  type: graphql
  seq: 1
}

post {
  url: http://localhost:8084/query
  body: graphql
  auth: inherit
}

body:graphql {
  mutation CreateTeam($input: CreateTeamInput!) {
    createTeam(input: $input) {
      id
      name
      description
      managerID {
        firstName
        lastName
        email
      }
    }
  }
  
}

