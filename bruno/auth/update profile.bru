meta {
  name: update profile
  type: graphql
  seq: 5
}

post {
  url: {{url}}
  body: graphql
  auth: inherit
}

body:graphql {
  mutation updateProfile($input : UpdateProfileInput!){
    updateProfile(input: $input){
      firstName
      lastName
      email
      phone
      password
    }
  }
}

body:graphql:vars {
  {
    "input": {
      "firstName": "UpdateFirstName"
    }
  }
}

settings {
  encodeUrl: true
}
